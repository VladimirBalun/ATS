<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>ru.tidstu.testingsystem.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>BasicDataServlet</servlet-name>
    <servlet-class>ru.tidstu.testingsystem.servlets.admin_room.BasicDataServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>IndexServlet</servlet-name>
    <servlet-class>ru.tidstu.testingsystem.servlets.IndexServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GroupsServlet</servlet-name>
    <servlet-class>ru.tidstu.testingsystem.servlets.admin_room.GroupsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UsersServlet</servlet-name>
    <servlet-class>ru.tidstu.testingsystem.servlets.admin_room.UsersServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GetTaskServlet</servlet-name>
    <servlet-class>ru.tidstu.testingsystem.servlets.GetTaskServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>TasksServlet</servlet-name>
    <servlet-class>ru.tidstu.testingsystem.servlets.TasksServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LogIn</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BasicDataServlet</servlet-name>
    <url-pattern>/BasicData</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>IndexServlet</servlet-name>
    <url-pattern>/Index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GroupsServlet</servlet-name>
    <url-pattern>/Groups</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UsersServlet</servlet-name>
    <url-pattern>/Users</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GetTaskServlet</servlet-name>
    <url-pattern>/GetTask</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TasksServlet</servlet-name>
    <url-pattern>/Tasks</url-pattern>
  </servlet-mapping>

</web-app>
